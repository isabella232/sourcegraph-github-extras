{
  "name": "github-extras",
  "publisher": "sourcegraph",
  "description": "Adds more GitHub integration features to Sourcegraph",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "actions": [
      {
        "id": "github.openPanel",
        "command": "openPanel",
        "commandArguments": [
          "github.pullRequests"
        ],
        "category": "GitHub",
        "title": "Pull requests",
        "actionItem": {
          "label": "Pull requests",
          "description": "Show GitHub pull requests"
        }
      }
    ],
    "menus": {
      "directory/page": [
        {
          "action": "github.openPanel"
        }
      ],
      "commandPalette": [
        {
          "action": "github.openPanel",
          "when": "resource"
        }
      ]
    },
    "configuration": {
      "title": "GitHub extras",
      "properties": {
        "github.explore.repositories": {
          "description": "A list of repositories (in `owner/name` format) to display in the Explore area.",
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^/]+/[^/]+$"
          },
          "default": [
            "sourcegraph/sourcegraph"
          ],
          "examples": [
            [
              "facebook/react",
              "twbs/bootstrap",
              "sourcegraph/sourcegraph"
            ]
          ]
        }
      }
    }
  },
  "version": "0.0.0-DEVELOPMENT",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-github-extras.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/extension.js",
  "scripts": {
    "prettier": "prettier '**/{*.{js?(on),tss},.*.js?(on)}' --write --list-different",
    "tslint": "tslint -c tslint.json -p tsconfig.json './src/*.ts' './*.ts'",
    "test": "jest",
    "build": "parcel build --no-minify --out-file extension.js src/extension.ts",
    "serve": "parcel serve --no-hmr --out-file extension.js src/extension.ts",
    "sourcegraph:prepublish": "yarn run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@sourcegraph/prettierrc": "^2.2.0",
    "@sourcegraph/tsconfig": "^4.0.0",
    "@sourcegraph/tslint-config": "^12.3.1",
    "@types/jest": "^24.0.11",
    "husky": "^1.1.2",
    "jest": "^24.5.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.14.2",
    "source-map-support": "^0.5.9",
    "sourcegraph": "^23.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "date-fns": "^2.0.0-alpha.25",
    "rxjs": "^6.4.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "preset": "ts-jest/presets/js-with-ts",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.[jt]s$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ]
  }
}
